<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gary.mapper.OrderMapper">

    <!-- add order detail -->
    <insert id="insert" parameterType="com.gary.model.OrderDetail" useGeneratedKeys="true" keyProperty="id">
      insert into spring_boot_transaction.order_detail (order_id,weapon,amount,status)
      values (#{orderId}, #{weapon}, #{amount}, #{status})
    </insert>

</mapper>